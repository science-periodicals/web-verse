{
  "name": "web-verse",
  "version": "2.1.2",
  "description": "Toolbox for deep, resilient, markup-invariant linking into HTML documents without their coÃ¶peration",
  "main": "dist/index.js",
  "scripts": {
    "build-node": "rm -rf dist && babel src --out-dir dist",
    "build-cover": "browserify src/index.js -o web-verse.js",
    "build-browser": "browserify src/index.js | uglifyjs - -c warnings=false -m > web-verse.min.js",
    "show-build": "browserify --deps src/index.js",
    "build": "npm run build-node && npm run build-browser && npm run build-cover",
    "watch-node": "nodemon -e js -w src/ --exec 'npm run build-node'",
    "watch-cover": "watchify src/index.js -o web-verse.js",
    "watch-browser": "watchify src/index.js -o 'uglifyjs - -c warnings=false -m > web-verse.min.js'",
    "watch": "concurrently --kill-others --prefix command 'npm run watch-node' 'npm run watch-browser' 'npm run watch-cover'",
    "test": "karma start karma.conf-ci.js",
    "test-local": "karma start karma.conf.js",
    "pretest": "npm run build",
    "prepublish": "npm run build"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": "> 0.25%, not dead"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/science-periodicals/web-verse.git"
  },
  "keywords": [
    "deep",
    "linking",
    "hyperlink"
  ],
  "contributors": [
    "Sebastien Ballesteros",
    "Robin Berjon"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/science-periodicals/web-verse/issues"
  },
  "homepage": "https://github.com/science-periodicals/web-verse",
  "dependencies": {
    "escape-regex-string": "^1.0.4",
    "fast-levenshtein": "^2.0.6",
    "sbd": "^1.0.12",
    "spark-md5": "^3.0.0"
  },
  "devDependencies": {
    "@scipe/eslint-config": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "concurrently": "^3.5.0",
    "jsdom": "^16.5.0",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-coveralls": "^1.1.2",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.2.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.12.1",
    "uglify-js": "^2.7.5",
    "watchify": "^3.9.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ]
        }
      ]
    ]
  }
}
